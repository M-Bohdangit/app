<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="table_sales" resource="default" engine="innodb" comment="Declarative Schema">
        <column xsi:type="smallint" name="id" padding="6" unsigned="false" nullable="false" identity="true"
                comment="ID"/>
        <column xsi:type="varchar" name="product_name" nullable="false" length="255" comment="Name"/>
        <column xsi:type="int" name="quantity" nullable="false" comment="Quantity of goods sold"/>
        <column xsi:type="date" name="date" comment="Sale date"/>
        <!-- <column xsi:type="float" name="discount" nullable="false"  comment="discount"/> -->
        <!-- 5. Переименовать столбик Скидка на Бонус -->
        <column xsi:type="float" name="bonus" onCreate="migrateDataFrom(discount)" nullable="false" comment="bonus"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>
</schema>
