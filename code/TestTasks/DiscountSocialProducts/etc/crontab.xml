<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Cron:etc/crontab.xsd">
    <group id="discount_product_group_custom">
        <job name="discount_enab"
             instance="TestTasks\DiscountSocialProducts\Cron\Test"
             method="enableRules">
            <config_path>crontab/discount_product_group_custom/jobs/discount_enab/schedule/cron_expr</config_path>
        </job>
        <job name="discount_disable"
             instance="TestTasks\DiscountSocialProducts\Cron\Test"
             method="disableRules">
            <config_path>crontab/discount_product_group_custom/jobs/discount_disable/schedule/cron_expr</config_path>
        </job>
    </group>
</config>

